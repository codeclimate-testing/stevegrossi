<%= flash_errors(@work) %>

<%= form_for([:meta, @work]) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :about %>
    <%= f.text_area :about %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.label :client %>
    <%= f.text_field :client %>

    <%= f.label :image_filename %>
    <%= f.text_field :image_filename %>

    <%= f.label :published_at %>
    <%= f.text_field :published_at %>

    <div class="actions">
      <%= f.submit 'Publish' %>
      <%= f.submit @work.published? ? 'Unpublish' : 'Save Draft', class: :secondary %>
      <%= link_to 'or go back', @work, class: :cancel %>
    </div>

<% end %>
