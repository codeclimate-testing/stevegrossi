<%= flash_errors(@writing) %>

<%= simple_form_for([:meta, @writing]) do |f| %>

  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :summary, as: :text, input_html: { rows: 4 } %>
  <%= f.input :published_at, as: :string %>

  <div class="actions">
    <%= f.submit 'Publish' %>
    <%= f.submit @writing.published? ? 'Unpublish' : 'Save Draft', class: :secondary %>
    <%= link_to 'or go back', @writing, class: :cancel %>
  </div>


<% end %>
