<h1>Listing wishlist_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Purchase at</th>
    <th>Purchased</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishlist_items.each do |wishlist_item| %>
  <tr>
    <td><%= wishlist_item.name %></td>
    <td><%= wishlist_item.description %></td>
    <td><%= wishlist_item.price %></td>
    <td><%= wishlist_item.purchase_at %></td>
    <td><%= wishlist_item.purchased %></td>
    <td><%= link_to 'Show', wishlist_item %></td>
    <td><%= link_to 'Edit', edit_wishlist_item_path(wishlist_item) %></td>
    <td><%= link_to 'Destroy', wishlist_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

