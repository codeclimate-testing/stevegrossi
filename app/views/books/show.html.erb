<p id="notice"><%= notice %></p>

<div class="book_info">
  <img src='http://images.amazon.com/images/P/<%= @book.asin %>.01.LZZZZZZZ.jpg' alt=''>
  <span class="book_title"><%= @book.title %></span>
  <span class="book_author"><%= @book.author %></span>
  <span class="book_publisher"><%= @book.publisher %>, <%= @book.pub_year %></span>
  <%= link_to 'Buy', 'http://www.amazon.com/gp/product/' + @book.asin + '?ie=UTF8&tag=stevgros-20' %>
</div>

<h1><%= @book.title %></h1>
<p class="meta"><%= @book.created_at.strftime('%b %d, %Y') %></p>

<%= markdown(@book.thoughts) %>

<%= link_to 'Edit', edit_book_path(@book) if current_user %>
<%= link_to 'Back', books_path %>