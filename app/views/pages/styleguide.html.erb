    <label for="input2">Text area</label>
    <textarea id="input2">Some default text will go here.</textarea>
    <label for="input3">Search field</label>
    <input type="search" id="input3" />
    <label for="input4"><input type="checkbox" id="input4" /> Checkbox field?</label>
    <label for="input5">Select field</label>
    <select id="input5">
      <option>Option One</option>
      <option>Option Two</option>
      <option>Option Three</option>
    </select>
