<%= flash_errors(@work) %>

<%= form_for(@work) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :about %>
    <%= f.text_area :about %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.label :client %>
    <%= f.text_field :client %>

    <%= f.label :image_filename %>
    <%= f.text_field :image_filename %>
    
    <%= f.label :publish_status %>
    <%= f.select(:publish_status, Postable::PUBLISH_STATES) %>

    <p><%= f.submit %>
      <%= link_to 'or go back', @work, :class => :cancel %>
    </p>

<% end %>